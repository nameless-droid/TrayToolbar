<UserControl x:Class="TrayToolbar.ActionIconButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrayToolbar"
             mc:Ignorable="d" 
             d:DesignHeight="100" x:Name="ucontrol" d:DesignWidth="200" Loaded="ucontrol_Loaded">
    <Grid Margin="0">
        <StackPanel Margin="0" x:Name="stackpanel" Background="{Binding background}" Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Image Margin="3" x:Name="img" Width="32" Height="32" StretchDirection="Both"></Image>
            <Label Margin="0" Padding="0" x:Name="lbl" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch"></Label>
            <TextBox Visibility="Collapsed" Keyboard.KeyDown="tb_KeyDown" Text="" Margin="0" Padding="0" x:Name="tb" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch" TextWrapping="Wrap"></TextBox>
        </StackPanel>
        <!--<Image x:Name="img" Height="32" Width="32" HorizontalAlignment="Left" Margin="10"></Image>-->
        <!--<Label x:Name="lbl" Width="150" HorizontalAlignment="Center" HorizontalContentAlignment="Left"></Label>-->
    </Grid>
</UserControl>
