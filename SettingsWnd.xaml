<Window x:Class="TrayToolbar.SettingsWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrayToolbar"
        mc:Ignorable="d"
        Title="SettingsWnd" Height="450" Width="800">
    <Grid>
        <Button FocusVisualStyle="{x:Null}" Content="Change Path" HorizontalAlignment="Left" Margin="80,64,0,0" VerticalAlignment="Top" Click="ChangePath_Click"/>
        <TextBox Visibility="Visible" IsReadOnly="True" IsReadOnlyCaretVisible="True" x:Name="tb_path" HorizontalAlignment="Left" Margin="160,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="380" Height="26" LostFocus="tb_path_LostFocus" KeyDown="tb_path_KeyDown"/>
        <CheckBox Content="Show only files and no extra buttons from xml file" Checked="ShowOnlyFiles_Checked" Unchecked="ShowOnlyFiles_Unchecked" HorizontalAlignment="Left" Margin="85,124,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
